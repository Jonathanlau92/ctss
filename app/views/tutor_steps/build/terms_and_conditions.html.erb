<div class='text-center'>Add progress bar here</div>
<h1 class='mb-3 text-center'>
  <span>Terms and Conditions</span>
</h1>
<%= form_for @tutor, url: wizard_path do |f| %>
  <div class="form-check">
    <%= f.check_box :code_of_conduct, {class: 'form-check-input'}, true, false %>
    <%= f.label :code_of_conduct, 'I have read and consent to the online code of conduct.', class: 'form-check-label' %>
  </div>
  <div class="form-check">
    <%= f.check_box :personal_consent, {class: 'form-check-input'}, true, false %>
    <%= f.label :personal_consent, 'By submitting this form, you are consenting for your data to be processed for the organisation of this tutoring initiative. If you would like specific details on how your data might be used, please contact us at enquiries.ctss@gmail.com.', class: 'form-check-label' %>
  </div>
  <div class='d-flex justify-content-center'>
  <%
      path=request.path
      tutor_step_id=path.split('/')[2]
      url=''
    %>
  <%= link_to 'Back', url, class: 'btn back-button' %>
  <%= f.submit 'Submit', class: 'btn submit-button'%>
  </div>
<% end %>
