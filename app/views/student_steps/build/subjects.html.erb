<div class="progress mt-3">
  <div class="progress-bar" role="progressbar" style="width:30%;" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100"></div>
</div>
<h1 class="text-center">
  <span>You are in:</span>
  <%  @education={"PSLE"=>"Primary School", "NT_level"=>"Secondary N(T)-Level", "NA_level"=>"Secondary N(A)-Level", "O_level"=>"Secondary O-Level", "A_level"=>"Junior College A-Level"} %>
  <span><%= @education[session[:student]['student']['education_level']] %></span>
</h1>

<h3 class="mb-3 text-center">
  <span>We have listed every examinable subject here but it is subject to availability of volunteer tutors. We'll try our best to match you to a volunteer tutor who has expertise in your chosen subjects.</span>
  <span>Please rank the subjects you need help with in order of importance!</span>
</h3>

<%= form_for @student, url: wizard_path, method: :put do |f|%>
  <% if session[:student]['student']['education_level'] == 'PSLE' %>
    <div class="form-group">
      <%= f.label :subject_1, '1st subject: '%>
      <%= f.select :subject_1,  @student.psle.sort, {include_blank: 'Select subject...', }, { required: true, class: 'form-control'} %>
    </div>
    <div class="form-group">
      <%= f.label :subject_2, '2nd subject: '%>
      <%= f.select :subject_2,  @student.psle.sort, {include_blank: 'Select subject...'}, { class: 'form-control'} %>
    </div>
    <div class="form-group">
      <%= f.label :subject_3, '3rd subject: '%>
      <%= f.select :subject_3,  @student.psle.sort, {include_blank: 'Select subject...'}, { class: 'form-control'} %>
    </div>
  <% elsif session[:student]['student']['education_level'] == 'NT_level' %>
    <div class="form-group">
      <%= f.label :subject_1, '1st subject: '%>
      <%= f.select :subject_1,  @student.nt_level.sort, {include_blank: 'Select subject...'}, { required: true, class: 'form-control'} %>
    </div>
    <div class="form-group">
      <%= f.label :subject_2, '2nd subject: '%>
      <%= f.select :subject_2,  @student.nt_level.sort, {include_blank: 'Select subject...'}, { class: 'form-control'} %>
    </div>
    <div class="form-group">
      <%= f.label :subject_3, '3rd subject: '%>
      <%= f.select :subject_3,  @student.nt_level.sort, {include_blank: 'Select subject...'}, { class: 'form-control'} %>
    </div>
  <% elsif session[:student]['student']['education_level'] == 'NA_level' %>
    <div class="form-group">
      <%= f.label :subject_1, '1st subject: '%>
      <%= f.select :subject_1,  @student.na_level.sort, {include_blank: 'Select subject...'}, {required: true, class: 'form-control'} %>
    </div>
    <div class="form-group">
      <%= f.label :subject_2, '2nd subject: '%>
      <%= f.select :subject_2,  @student.na_level.sort, {include_blank: 'Select subject...'}, { class: 'form-control'} %>
    </div>
    <div class="form-group">
      <%= f.label :subject_3, '3rd subject: '%>
      <%= f.select :subject_3,  @student.na_level.sort, {include_blank: 'Select subject...'}, { class: 'form-control'} %>
    </div>
  <% elsif session[:student]['student']['education_level'] == 'O_level' %>
    <div class="form-group">
      <%= f.label :subject_1, '1st subject: '%>
      <%= f.select :subject_1,  @student.o_level.sort, {include_blank: 'Select subject...'}, {required: true, class: 'form-control'} %>
    </div>
    <div class="form-group">
      <%= f.label :subject_2, '2nd subject: '%>
      <%= f.select :subject_2,  @student.o_level.sort, {include_blank: 'Select subject...'}, { class: 'form-control'} %>
    </div>
    <div class="form-group">
      <%= f.label :subject_3, '3rd subject: '%>
      <%= f.select :subject_3,  @student.o_level.sort, {include_blank: 'Select subject...'}, { class: 'form-control'} %>
    </div>
  <% else %>
    <div class="form-group">
      <%= f.label :subject_1, '1st subject: '%>
      <%= f.select :subject_1,  @student.a_level.sort, {include_blank: 'Select subject...'}, {required: true, class: 'form-control'} %>
    </div>
    <div class="form-group">
      <%= f.label :subject_2, '2nd subject: '%>
      <%= f.select :subject_2,  @student.a_level.sort, {include_blank: 'Select subject...'}, { class: 'form-control'} %>
    </div>
    <div class="form-group">
      <%= f.label :subject_3, '3rd subject: '%>
      <%= f.select :subject_3,  @student.a_level.sort, {include_blank: 'Select subject...'}, { class: 'form-control'} %>
    </div>
  <% end %>
  <div class="form-group">
    <%= f.label :others_subject, 'Other subjects not in the list (if any): '%>
    <%= f.text_field :others_subject, {class: 'form-control'} %>
  </div>
  <div class='form-group'>
    <%= f.label :topics_to_go_through, 'What would you like your tutor to go through with you during your tutoring sessions?' %>
    <span>E.G</span>
    <span>- the current topic that you're studying</span>
    <span>- topics/skills that you need help with specifically</span>
    <%= f.text_area :topics_to_go_through, class: 'form-control', cols: 3, rows: 3 %>
  </div>
  <div class='form-group'>
    <%= f.label :special_request, 'Do you have any specific needs?' %>
    <%= f.text_field :special_request, class: 'form-control' %>
  </div>
  <div class='d-flex justify-content-center'>
    <%= f.submit "Next", class: 'btn next-button'%>
  </div>
<%end%>

