<div class='text-center'>Add progress bar here</div>
  
  <%if @feedback_type == "student"%>
    <h1 class='mt-3 text-center'>Feedback form for Students</h1>
  <%elsif @feedback_type == "tutor"%>
    <h1 class='mt-3 text-center'>Feedback form for Tutors</h1>
  <% end %>  
  
  <div class='form-group'>
  <%= form_for @feedback do |f| %>
    <div class='form-group'>
      <%= f.label :matching_number %>
      <%= f.text_field :matching_number, class: 'form-control' %>
    </div>
    <div class='form-group'>
      <%= f.label :full_name %>
      <%= f.text_field :full_name, class: 'form-control' %>
    </div>
    <div class='form-group'>
      <%= f.label :date_of_session %>
      <%= f.date_field :date_of_session, class: 'form-control' %>
    </div>
    <div class='form-group'>
      <%= f.label :start_time %>
      <%= f.time_field :start_time, class: 'form-control' %>
    </div>
    <div class='form-group'>
      <%= f.label :end_time %>
      <%= f.time_field :end_time, class: 'form-control' %>
    </div>
    <div class='form-group'>
      <%if @feedback_type == "student"%>
        <%= f.label :topics_covered, 'What did you do with your tutor today?' %>
        <%= f.text_field :topics_covered, class: 'form-control' %>
      <%elsif @feedback_type == "tutor"%>
        <%= f.label :topics_covered, 'What did you cover with your student today?' %>
        <%= f.text_field :topics_covered, class: 'form-control' %>
      <%end%>  
    </div>
  
    <div class='form-group'>
      <%if @feedback_type == "student"%>
        <%= f.label :comfortable_with_tutor, 'Are you comfortable with your tutor?' %>
        <br>
        <div class="ml-5 form-check form-check-inline">
          <%= f.radio_button :comfortable_with_tutor, true, :value => true , class:'mr-1 form-check-label' %> 
          <%= f.label :comfortable_with_tutor, 'Yes', value:true, class: 'form-check-input' %>
        </div>
        <div class="ml-5 form-check form-check-inline">
          <%= f.radio_button :comfortable_with_tutor, false, :value => false, class:'mr-1 form-check-label' %>
          <%= f.label :comfortable_with_tutor, 'No', value:false, class: 'form-check-input' %>
        </div>
      <%end%>
    </div>

    <div class='form-group'>
      <%if @feedback_type == "tutor"%>
        <%= f.label :platform, 'Which platform did you use to conduct your tutoring session today?' %>
        <%= f.text_field :platform, class: 'form-control' %>
      <%end%>
    </div>

    <div class='form-group'>
      <%if @feedback_type == "tutor"%>
        <%= f.label :difficulties_with_tutoring, 'Did you meet any difficulties with tutoring today? Be it technical or teaching issues? If no, please enter "NIL".' %>
        <%= f.text_field :difficulties_with_tutoring, class: 'form-control' %>
      <%end%>
    </div>
    <div class='form-group'>
      <%if @feedback_type == "student"%>
        <%= f.label :know_about_program, "How did you know about our program?" %>
        <br>
        <% @feedback.know_about_program.each do |platform| %>
          <%= check_box_tag "know_about_program_ids[]", platform %>
          <%= label_tag platform %>
          <br>
        <% end %>
      <% end %>  
    </div>

    <div class='form-group'>
      <%if @feedback_type == "student"%>
        <%= f.label :other_feedbacks, 'Do you have other feedback?' %>
        <%= f.text_field :other_feedbacks, class: 'form-control' %>
      <%end%>
    </div>

    <%= f.collection_select :student_id, @students, :id, :full_name, prompt:true %>
    <%= f.collection_select :tutor_id, @tutors, :id, :full_name, prompt:true %>
    <%= f.hidden_field :type, value: @feedback_type %>
    
    <div class='d-flex justify-content-center'>
      <%= link_to 'Back', root_path, class: 'btn back-button' %>
      <%= f.submit 'Next', class: 'btn next-button' %>
    </div>
  </div>
  <% end %>