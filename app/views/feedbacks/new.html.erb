<div class='text-center'>Add progress bar here</div>
  <h1 class='mt-3 text-center'>Feedback form</h1>
  <div class='form-group'>
  <%= form_for @feedback do |f| %>
    <div class='form-group'>
      <%= f.label :matching_number %>
      <%= f.text_field :matching_number, class: 'form-control' %>
    </div>
    <div class='form-group'>
      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>
    </div>
    <div class='form-group'>
      <%= f.label :date_of_session %>
      <%= f.date_field :date_of_session, class: 'form-control' %>
    </div>
    <div class='form-group'>
      <%= f.label :start_time %>
      <%= f.time_field :start_time, class: 'form-control' %>
    </div>
    <div class='form-group'>
      <%= f.label :end_time %>
      <%= f.time_field :end_time, class: 'form-control' %>
    </div>

    <div class='form-group'>
      <%= f.label :observe_code_of_conduct, 'Did your tutor observe the code of conduct?' %>
      <div class="ml-5 form-check form-check-inline">
        <%= f.radio_button :observe_code_of_conduct, 'Yes', class:'mr-1 form-check-label' %> 
        <%= f.label :observe_code_of_conduct, 'Yes', value: 'No', class: 'form-check-input' %>
      </div>
      <div class="ml-5 form-check form-check-inline">
        <%= f.radio_button :observe_code_of_conduct, 'No', class:'mr-1 form-check-label' %>
        <%= f.label :observe_code_of_conduct, 'No', value: 'Yes', class: 'form-check-input' %>
      </div>
    </div>
    
    <div class='d-flex justify-content-center'>
      <%= link_to 'Back', root_path, class: 'btn back-button' %>
      <%= f.submit 'Next', class: 'btn next-button' %>
    </div>
  </div>
  <% end %>